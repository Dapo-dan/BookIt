# Application Environment
APP_ENV=dev
APP_DEBUG=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALG=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# Password Hashing
BCRYPT_ROUNDS=12

# Database Configuration
DATABASE_URL=postgresql+asyncpg://bookit_user:bookit_password@localhost:5432/bookit_db
SYNC_DATABASE_URL=postgresql://bookit_user:bookit_password@localhost:5432/bookit_db

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Production Database (for deployment)
# DATABASE_URL=postgresql+asyncpg://username:password@host:port/database
# SYNC_DATABASE_URL=postgresql://username:password@host:port/database
